<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:id="@+id/row_layout">

        <ImageView android:id="@+id/fld_icon"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dip"/>
        <TextView android:id="@+id/fld_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fld_icon"
            android:layout_weight="2"
            android:layout_gravity="left" 
            android:paddingRight="4dip" 
            android:textSize="10sp"
            android:text="very long file name.conf"/>
        <TextView android:id="@+id/fld_date"
        android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:textSize="9sp"
            android:paddingRight="4dip" 
            android:typeface="monospace"
            android:singleLine="true"
            android:ellipsize="none"
            android:text="04.12.2012 10:44"/>
        <TextView android:id="@+id/fld_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/fld_date"
            android:textSize="9sp"
            android:paddingRight="5dip"
            android:layout_gravity="right" 
            android:typeface="monospace"
            android:singleLine="true"
            android:ellipsize="none"
            android:text="9999Kb"/>
        <TextView android:id="@+id/fld_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_toLeftOf="@id/fld_size"
            android:textSize="9sp"
            android:paddingRight="1dip"
            android:typeface="monospace"
            android:singleLine="true"
            android:ellipsize="none"
            android:text="-rwxr-xr-x 1 system system " />
</RelativeLayout>

