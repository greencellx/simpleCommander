<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TableLayout 
        android:id="@+id/chmod" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" >
        <TextView android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dip" 
            android:paddingRight="10dip"/>
        <TableRow 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:gravity="center"
            android:paddingTop="0dip" 
            android:paddingBottom="0dip">
                <TextView
                    android:id="@+id/User"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:gravity="right"
                    android:paddingLeft="10dip" 
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="r" 
                    android:id="@+id/UR"
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="w" 
                    android:id="@+id/UW" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="x" 
                    android:id="@+id/UX" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="s" 
                    android:id="@+id/US" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:gravity="center"
            android:paddingTop="0dip" 
            android:paddingBottom="0dip">
                <TextView
                    android:id="@+id/Group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group"
                    android:gravity="right"
                    android:paddingLeft="10dip" 
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="r" 
                    android:id="@+id/GR" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="w" 
                    android:id="@+id/GW" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="x" 
                    android:id="@+id/GX" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="s" 
                    android:id="@+id/GS" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
        </TableRow>
        <TableRow 
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content" 
            android:gravity="center">
                <TextView
                    android:id="@+id/Other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other" 
                    android:gravity="right"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="r" 
                    android:id="@+id/OR" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="w" 
                    android:id="@+id/OW" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="x" 
                    android:id="@+id/OX" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
                <CheckBox 
                    android:text="t" 
                    android:id="@+id/OT" 
                    android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:paddingRight="10dip"/>
        </TableRow>
    </TableLayout>

    <TextView 
        android:id="@+id/user_prompt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:text="@string/user"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <EditText
        android:id="@+id/user_edit"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:inputType="textVisiblePassword"
        android:scrollHorizontally="true"
        android:autoText="false"
        android:capitalize="none"
        android:gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/group_prompt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:text="@string/group"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceSmall" />
            
    <EditText
        android:id="@+id/group_edit"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:scrollHorizontally="true"
        android:autoText="false"
        android:capitalize="none"
        android:gravity="fill_horizontal"
        android:inputType="textVisiblePassword"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</LinearLayout>
